{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Vitest Tests - Current File",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test:debug", "--", "${fileBasenameNoExtension}"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
